[user]
    name = AUTHORNAME
    email = AUTHOREMAIL

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%C(green)%h%C(cyan) %ar%Creset - %s%C(red)%d%C(yellow) [%an] %Creset\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    diff = diff -F
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"

[merge]
    tool = vimdiff
[mergetool]
    keepBackup = false
[core]
    excludesfile = ~/.gitignore-global
    ignorecase = true
[push]
    default = GIT_PUSH_DEFAULT
[color]
    ui = auto
[color "diff"]
    meta = yellow bold
    commit = cyan
    frag = magenta bold
    old = red
    new = green
    whitespace = red reverse
[branch]
    autosetuprebase = always
    autosetupmerge = always
[credential]
    helper = GIT_CREDENTIAL_HELPER
[web]
    browser = open
[rerere]
    enabled = 1
[fetch]
    prune = true
[help]
    autocorrect = 1
