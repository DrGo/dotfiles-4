# Font and appearance
fontName              = "Menlo" 
fontSize              = 12
theme                 = "Twilight"

# Environment
TM_GIT                = "/usr/local/bin/git"

# Extra includes
myExtraIncludes       = ".tm_properties,.htaccess,.gitignore"
fileBrowserGlob       = "{*,$myExtraIncludes}"
include               = "{$include,$myExtraIncludes}"

# Extra excludes
# Hide log, vendor and tmp directories from search popups.
myExtraExcludes       = "log,vendor,tmp"
excludeInFileChooser  = "{$excludeInFileChooser,$myExtraExcludes}" 
excludeInFolderSearch = "{$excludeInFolderSearch,$myExtraExcludes}"
excludeFiles          = "*.{so,pyc,o,scssc}"
excludeDirectories    = "build,dist,tmp,log"

# show the path to the current tab's file in the window title 
windowTitle           = "$TM_DISPLAYNAME${TM_DIRECTORY/\A(?:\/Users\/thomas\w+\/?(.*)|(.+))\z/${2:? – ${2/\A\/Users\/thomas/~/}:${1/\A(?=.)/ – /}}/}"

tabSize               = 4
softTabs              = true
wrapColumn            = 100
showWrapColumn        = true
softWrap              = false

[ *.{txt,md,mdown,markdown} ]
spellChecking         = true
tabSize               = 4
softWrap              = true
wrapColumn            = 80

[ text ]
showInvisibles        = true

[ "{README,INSTALL,LICENSE,TODO}" ]
fileType              = "text.plain"

[ .git/COMMIT_EDITMSG ]
softWrap              = true
spellChecking         = true
spellingLanguage      = 'en'

[ *.{icns,ico,jpg,jpeg,m4v,nib,pdf,png,psd,pyc,rtf,tif,tiff,xib} ]
binary                = true

[ source.apache ]
tabSize = 2
